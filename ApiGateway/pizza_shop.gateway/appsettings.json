{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "JwtSettings": {
    "Key": "Demo_saga_pizza_Project_with_Authentication_and_Authorization",
    "Issuer": "http://localhost:5006",
    "Audience": "http://localhost:5005",
    "ExpiryMinutes": "60"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {

      "Catalog-Route": {
        "ClusterId": "CatalogCluster",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/catalog"
          }
        ]
      },

      "Cart-Route": {
        "ClusterId": "BasketCluster",
        "Match": {
          "Path": "/cart/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/cart"
          }
        ]
      },


      "Order-Route": {
        "ClusterId": "OrderCluster",
        "Match": {
          "Path": "/purchase/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/purchase"
          }
        ]
      },

      "Inventory-Route": {
        "ClusterId": "InventoryCluster",
        "Match": {
          "Path": "/inventory/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/inventory"
          }
        ]
      },

      "Auth-Route": {
        "ClusterId": "AuthCluster",
        "Match": {
          "Path": "auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      }

    },


    "Clusters": {
      "CatalogCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5000"
            //"Address": "http://catelog_service:8080"
          }
        }
      },

      "BasketCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5001"
            //"Address": "http://basket_service:8080"
          }
        }
      },

      "OrderCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5003"
            //"Address": "http://order_service:8080"
          }
        }
      },

      "InventoryCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5004"
            //"Address": "http://inventory_service:8080"
          }
        }
      },


      "AuthCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5006"
            //"Address": "http://auth_service:8080"
          }
        }
      }

    }
  }
}